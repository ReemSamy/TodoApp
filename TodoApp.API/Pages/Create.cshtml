@page
@model TodoApp.API.Pages.CreateModel
@{
    ViewData["Title"] = "Create Todo";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <div class="form-group">
            <label for="todoTitle">Title</label>
            <input type="text" class="form-control" id="todoTitle" asp-for="Todo.Title" required />
            <span asp-validation-for="Todo.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="todoDescription">Description</label>
            <textarea class="form-control" id="todoDescription" asp-for="Todo.Description"></textarea>
            <span asp-validation-for="Todo.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="todoStatus">Status</label>
            <select class="form-control" asp-for="Todo.Status">
                <option value="Pending">Pending</option>
                <option value="InProgress">In Progress</option>
                <option value="Completed">Completed</option>
            </select>
            <span asp-validation-for="Todo.Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="todoPriority">Priority</label>
            <select class="form-control" asp-for="Todo.Priority">
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
            <span asp-validation-for="Todo.Priority" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="todoDueDate">Due Date</label>
            <input type="date" class="form-control" asp-for="Todo.DueDate" />
            <span asp-validation-for="Todo.DueDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Todo</button>
    </form>
</div>

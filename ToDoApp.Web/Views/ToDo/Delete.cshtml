@model TodoApp.Application.DTOs.TodoDto

@{
    ViewData["Title"] = "Delete Todo";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this Todo?</h4>
<div>
    <h5>Title: @Model.Title</h5>
    <p>Description: @Model.Description</p>
    <p>Status: @Model.Status</p>
    <p>Priority: @Model.Priority</p>
    <p>Due Date: @Model.DueDate?.ToString("yyyy-MM-dd")</p>
    <p>Due Date: @Model.CreatedDate.ToString("yyyy-MM-dd")</p>
    <p>Due Date: @Model.LastModifiedDate.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden Field for ID -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "ToDo")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
